datasource db {
  provider = "sqlite" // Use SQLite or the database provider of your choice
  url      = env("DATABASE_URL") // Reads the database URL from your .env file
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int      @id @default(autoincrement())
  fullName      String
  email         String   @unique
  password      String
  dateOfBirth   DateTime
  gender        String
  nationality   String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
